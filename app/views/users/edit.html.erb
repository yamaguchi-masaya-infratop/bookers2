<div>
    <p id="notice"><%= flash[:notice] %></p>
    <% if @user.errors.any? %>
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
          <div class="form-group">
            <label for="user_name">Name</label>
            <br>
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name" %>
          </div>
          <div class="form-group">
            <label for="user_image">Image</label>
            <br>
            <%= f.file_field :profile_image, placeholder: "ProfileImage", accept: "image/*" %>
          </div>
          <div class="form-group">
            <label for="user_introduction">Introduction</label>
            <br>
            <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"Introduction" %>
          </div>
          <div class="form-group">
            <%= f.submit "Update User", class: "btn btn-secondary" %>
          </div>
      <% end %>
    </div>
  </div>
</div>
