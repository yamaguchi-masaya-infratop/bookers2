<div>
    <% if @user.errors.any? %>
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
</div>

<h2>User info</h2>
<%= form_with model: @user do |f| %>
    <label for="inputName">Name</label>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name" %>
    <label for="inputImage">ProfileImage</label>
    <%= f.file_field :profile_image, placeholder: "ProfileImage", accept: "image/*" %>
    <label for="inputIntroduction">Introduction</label>
    <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"Introduction" %>
    <%= f.submit "Edit User" %>
<% end %>